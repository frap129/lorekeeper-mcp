# =============================================================================
# LoreKeeper MCP Configuration
# =============================================================================
# All environment variables use the LOREKEEPER_ prefix.
# Copy this file to .env and customize as needed.

# =============================================================================
# Cache Backend Configuration
# =============================================================================

# Cache backend type: "milvus" (default) or "sqlite"
#
# MILVUS (recommended):
# - Provides semantic/vector search capabilities
# - Finds content by meaning, not just exact text
# - Downloads embedding model (~80MB) on first use
# - Supports hybrid search (semantic + structured filters)
#
# SQLITE (legacy):
# - Structured filtering only (no semantic search)
# - Smaller footprint, no model download
# - Use for backward compatibility or constrained environments
#
LOREKEEPER_CACHE_BACKEND=milvus

# Path to Milvus Lite database file (when using milvus backend)
# Supports ~ for home directory expansion
# NOTE: When switching from sqlite to milvus, data must be re-imported
LOREKEEPER_MILVUS_DB_PATH=~/.lorekeeper/milvus.db

# Path to SQLite database file (when using sqlite backend)
# Used when LOREKEEPER_CACHE_BACKEND=sqlite
LOREKEEPER_DB_PATH=./data/cache.db

# =============================================================================
# Embedding Model Configuration (Milvus backend only)
# =============================================================================

# Sentence-transformers model for generating embeddings
# Default: all-MiniLM-L6-v2 (384 dimensions, ~80MB download)
# The model is downloaded automatically on first use
#
# Alternative lightweight models:
# - paraphrase-MiniLM-L3-v2 (smaller, faster, less accurate)
# - all-mpnet-base-v2 (larger, slower, more accurate)
#
LOREKEEPER_EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# Cache TTL Configuration
# =============================================================================

# Default TTL for cached responses (in days)
# NOTE: Entity data in Milvus uses infinite TTL (never expires)
# This setting primarily affects legacy SQLite cache behavior
LOREKEEPER_CACHE_TTL_DAYS=7

# TTL for error responses that should be cached separately (in seconds)
LOREKEEPER_ERROR_CACHE_TTL_SECONDS=300

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOREKEEPER_LOG_LEVEL=INFO

# Debug mode - enables verbose logging and other debugging features
LOREKEEPER_DEBUG=false

# =============================================================================
# API Endpoints
# =============================================================================

# Base URL for the Open5e D&D 5e API
LOREKEEPER_OPEN5E_BASE_URL=https://api.open5e.com

# Base URL for the D&D 5e API
LOREKEEPER_DND5E_BASE_URL=https://www.dnd5eapi.co/api
